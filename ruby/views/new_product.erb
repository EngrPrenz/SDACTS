<h2>Add Product</h2>

<div class="box">
  <% if @error %>
    <div class="error"><%= @error %></div>
  <% end %>

  <form method="post" action="/products">
    <label>Name</label>
    <input name="name" />

    <label>Price</label>
    <input name="price" type="number" step="0.01" value="0" />

    <label>Qty</label>
    <input name="qty" type="number" value="0" />

    <button type="submit">Save</button>
    <a href="/products">Cancel</a>
  </form>
</div>
