<h2>Login</h2>

<% if @error %>
  <p style="color:darkred;"><%= @error %></p>
<% end %>

<form method="post" action="/login" style="max-width:360px;">
  <label>Username</label><br>
  <input name="username" style="width:100%; padding:8px; margin:6px 0;" />

  <label>Password</label><br>
  <input type="password" name="password" style="width:100%; padding:8px; margin:6px 0;" />

  <button type="submit" style="padding:8px 12px;">Login</button>
</form>

<p style="margin-top:12px;">
  First time? Create admin: <a href="/setup">/setup</a> (admin / admin123)
</p>
