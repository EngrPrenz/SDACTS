<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Ruby SQL GUI</title>
  <style>
    body { font-family: Arial; margin: 30px; }
    nav a { margin-right: 10px; }
    hr { margin: 16px 0; }
  </style>
</head>
<body>
  <nav>
    <% if session[:user_id] %>
      <a href="/products">Products</a>
      <a href="/logout">Logout</a>
    <% else %>
      <a href="/login">Login</a>
    <% end %>
  </nav>
  <hr />
  <%= yield %>
</body>
</html>
